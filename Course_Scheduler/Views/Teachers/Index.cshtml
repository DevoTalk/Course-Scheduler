@model IEnumerable<Course_Scheduler.Models.Teacher>

@{
    ViewData["Title"] = "Teachers";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">
                <i class="fas fa-chalkboard-teacher me-3"></i>Teachers
            </h1>
            <p class="text-muted">Manage your teaching staff and their information</p>
        </div>
        <div class="col-auto align-self-center">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>Add New Teacher
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-user me-2"></i>@Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                <i class="fas fa-id-badge me-2"></i>@Html.DisplayNameFor(model => model.TeacherCode)
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td class="align-middle">
                                    @Html.DisplayFor(modelItem => item.TeacherCode)
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-info-circle me-1"></i>Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-edit me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash-alt me-1"></i>Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
