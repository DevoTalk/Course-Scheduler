@model List<Course_Scheduler.Models.ViewModels.CoursePenaltyViewModel>

@{
    ViewData["Title"] = "Edit Course Penalties";
    var course = (Course)ViewData["Course"];
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">
                <i class="fas fa-exclamation-triangle me-3"></i>Edit Penalties
            </h1>
            <p class="text-muted">Manage penalties for @course.Name</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @for (int i = 0; i < Model.Count(); i++)
                {
                    <div class="row mb-3 align-items-center">
                        <div class="col-md-6">
                            <label class="form-label fw-bold" for="@(Model[i].CourseWithPenalty.ID.ToString())">
                                <i class="fas fa-book me-2"></i>@Model[i].CourseWithPenalty.Name
                            </label>
                        </div>
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-exclamation-circle"></i>
                                </span>
                                <input type="number" 
                                       class="form-control" 
                                       id="@(Model[i].CourseWithPenalty.ID.ToString())" 
                                       name="coursePenaltyViewModels[@i].PenaltyCount" 
                                       value="@Model[i].PenaltyCount"
                                       min="0"
                                       placeholder="Enter penalty value" />
                                <input type="hidden" 
                                       name="coursePenaltyViewModels[@i].CourseWithPenalty.ID" 
                                       value="@Model[i].CourseWithPenalty.ID" />
                            </div>
                        </div>
                    </div>
                }
                <input type="hidden" id="id" name="id" value="@course.ID" />
                
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
