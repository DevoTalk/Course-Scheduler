@model List<Course_Scheduler.Models.ViewModels.CoursePenaltyViewModel>

@{
    ViewData["Title"] = "Edit";
    var course = (Course)ViewData["Course"];
}


<h1>@course.Name</h1>

<form asp-action="Edit" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="row">
            <div class="col-md-6">
                <label for="@(Model[i].CourseWithPenalty.ID.ToString())">@Model[i].CourseWithPenalty.Name</label>
            </div>
            <div class="col-md-6">
                <input type="text" class="form-control" id="@(Model[i].CourseWithPenalty.ID.ToString())" name="coursePenaltyViewModels[@i].PenaltyCount" value="@Model[i].PenaltyCount" />
                <input type="hidden" name="coursePenaltyViewModels[@i].CourseWithPenalty.ID" value="@Model[i].CourseWithPenalty.ID" />
            </div>
        </div>
    }
    <input type="hidden" id="id" name="id" value="@course.ID" />
    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>
