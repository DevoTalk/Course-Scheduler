@model IEnumerable<Course_Scheduler.Models.Course>

@{
    ViewData["Title"] = "Course Penalties";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4 text-primary">
                <i class="fas fa-exclamation-triangle me-3"></i>Course Penalties
            </h1>
            <p class="text-muted">View and manage course scheduling penalties</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>
                                <i class="fas fa-book me-2"></i>Course Name
                            </th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Name</td>
                                <td class="text-end">
                                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit Penalties
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
