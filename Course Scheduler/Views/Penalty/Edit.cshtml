@model List<Course_Scheduler.Models.ViewModels.CoursePenaltyViewModel>

@{
    ViewData["Title"] = "Edit";
    var course = (Course)ViewData["Course"];
}


<h1>@course.Name</h1>

<form asp-action="Edit" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="row">
            <div>
                @Model[i].CourseWithPenalty.Name
                <input type="text" id="@(Model[i].CourseWithPenalty.ID.ToString())" name="coursePenaltyViewModels[@i].PenaltyCount" value="@Model[i].PenaltyCount" />
                <input type="hidden" name="coursePenaltyViewModels[@i].CourseWithPenalty.ID" value="@Model[i].CourseWithPenalty.ID" />
            </div>
        </div>
    }
    <input type="hidden" id="id" name="id" value="@course.ID" />
    <input type="submit" class="btn-success" value="submit" />
</form>